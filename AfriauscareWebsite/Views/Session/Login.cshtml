@model Afriauscare.BusinessLayer.User.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Login Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="shadow-lg p-4 mb-4 bg-white">
            @using (Html.BeginForm("Login", "Session", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                
                <h2>Login Administration Portal</h2>
                <br />
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserEmail, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserEmail, null, new { @class = "text text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "text text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.ValidationMessage("Error", null, new { @class = "text text-danger col-sm-10" })
                </div>
                <hr class="hr" />
                <div class="form-group row">
                    <a>@Html.ActionLink("Forgot your password?", "ForgotPassword", "Session", null, new { @class = "link-primary col-sm-10" })</a>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Home")'">Back to Web Site</button>
                    </div>
                    
                </div>
                
            }
        </div>

    </div>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>

</html>