@model Afriauscare.BusinessLayer.User.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="shadow-lg p-4 mb-4 bg-white">
            @using (Html.BeginForm("UpdatePasswordDetails", "Session", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h2>Update your Password</h2>
                <br />
                if (TempData["ConfirmationMessageEmail"] != null)
                {
                    <div id="ConfirmationMessage" class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Success!</strong> @TempData["ConfirmationMessageEmail"]
                    </div>
                }

                <div class="form-group row">
                    @Html.LabelFor(model => model.UserEmail, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.UserEmail, null, new { @class = "text text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.TemporaryPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(model => model.TemporaryPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TemporaryPassword, null, new { @class = "text text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "text text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.ValidationMessage("Error", null, new { @class = "text text-danger col-sm-10" })
                </div>
                <hr class="hr" />
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary">Update Password</button>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Login", "Session")'">Back to Login</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>

</html>
