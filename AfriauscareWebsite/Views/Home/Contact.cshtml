@model Afriauscare.BusinessLayer.ContactInformation.ContactInformationModel
@{
    ViewBag.Title = "Contact Us";
}

<section>
<div class="hero-container">
    <div class="row">
        <div class="col-lg-12 col-md-6 d-flex" style="background-image: url(/Content/Images/contact_.jpg); height: 350.9px">
        </div>
    </div>

</div>
</section>
<section id="about" class="about">
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="et_pb_text_1 col-lg-5 col-md-6">
                <h3>STAY IN TOUCH</h3> <br />
                <p>connect with us on our social media sites to stay up to date on all our latest programs and events. Or send us a message below if you have any enquires. </p>
                <i class="bi bi-facebook" style="font-size:xx-large;"></i> &nbsp;
                <i class="bi bi-youtube" style="font-size:xx-large;"></i>
            </div>
            <div class="et_pb_text_1 col-lg-2 col-md-6" style="text-align:center">
                <h3>OPENING HOURS</h3> <br />
                <p>Mon: 5am – 10pm</p>
                <p>Mon: 5am – 10pm</p>
                <p>Wed: 5am – 10pm</p>
                <p>Thu: 5am – 10pm</p>
                <p>Fri: 5am – 10pm</p>
                <p>Sat: 6 am – 10pm</p>
                <p>Sun: 6 am – 10pm</p>
            </div>

            <div class="et_pb_text_1 col-lg-5 col-md-6" style="text-align:center">
                <h3>Contact</h3> <br />
                <p>Phone @Model.Phone_number</p>
                <p>Mobile @Model.Mobile_number</p>
                <p>Fax @Model.Fax_number</p>
                <p><a href="mailto: @Model.Email_address">@Model.Email_address</a></p>
                <p>@Model.Contact_address,<br /> @Model.Suburb_name, @Model.State_name, @Model.Postcode</p>
            </div>
        </div>
    </div>
</section>
<section class="get-in-touch">
    <h1 class="title">Get in touch</h1>
    <form class="contact-form">
        <div class="row">
            <div class="form-field col x-100">
                <input id="name" class="input-text js-input" type="text" required>
                <label class="label" for="name">Name</label>
            </div>
        </div>

        <div class="row">
            <div class="form-field col x-100">
                <input id="email" class="input-text js-input" type="email" required>
                <label class="label" for="email">E-mail</label>
            </div>
        </div>

        <div class="row">
            <div class="form-field col x-100">
                <input id="message" class="input-text js-input" type="text" required>
                <label class="label" for="message">Message</label>
            </div>
        </div>

        <div class="row">
            <div class="form-field col x-100 align-center">
                <input class="submit-btn" type="submit" value="Submit">
            </div>
        </div>
    </form>
</section>