@model IEnumerable<Afriauscare.BusinessLayer.Gallery.GalleryContentModel>

@{
    ViewBag.Title = "More pictures";
}

<script src="~/Scripts/bootstrap.js"></script>

<br />
<br />
<br />
<section id="header">
    <h3 style="text-align:center;">@Model.First().GalleryContentPath</h3>
</section>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <a>
                        <img src="data:image/jpg;base64,@Convert.ToBase64String(item.GalleryContentImage)" alt="Image from gallery" style="width:100%">
                    </a>
                </div>
            </div>
        }
    </div>
</div>
