@model Afriauscare.BusinessLayer.Error.ErrorModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <title>Error</title>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <hgroup>
            <h1>Error.</h1>
            <h2>An error occurred while processing your request.</h2>
            <h2>Error Message : @Model.ErrorMessage</h2>
        </hgroup>
    </div>
    <div class="container d-flex justify-content-center">
        <hgroup>
            @Html.ActionLink("Go Back to Index", "Index", "HomeAdminPortal", null, new { @class = "btn btn-info" })
        </hgroup>
    </div>
</body>
</html>
