@model AfriauscareWebsite.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Login Page</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="div-center">
        <div class="content">
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="mx-auto col-12 col-md-10 col-lg-6">
                <h2>Login Administration Portal</h2>
                <br />
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserEmail, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserEmail, null, new { @class = "text text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "text text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.ValidationMessage("Error", null, new { @class = "text text-danger col-sm-10" })
                </div>
                <hr class="hr" />
                <div class="form-group row">
                    <a href="#" class="link-primary col-sm-10">Forgot your password?</a>
                </div>
                <div class="float-right">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Home")'">Back to Web Site</button>
                </div>
            </div>
            }
        </div>
    </div>
</body>

</html>